@page
@model BetterPrice.Pages.CarrinhoModel
@{
@if (Model.ProdutosPorMercados is not null)
{
    @foreach(var produtosPorMercado in Model.ProdutosPorMercados)
    {
        <div class="market-section mb-5">
            <h2 class="mb-3">@produtosPorMercado.Mercado.Nome</h2>
            <div class="row g-4">

            @foreach (var item in produtosPorMercado.Items)
            {
                <div class="col-md-3">
                    <div class="card h-100">
                        <img class="card-img-top" alt="@item.Produto.UrlImagem">
                        <div class="card-body">
                            <h5 class="card-title">@item.Produto.Nome</h5>
                            <p class="card-text">@item.Produto.Descricao</p>
                            <p class="card-price">@($"R$ {item.Valor:N2}").</p>
                            <a href="#" class="btn btn-primary">Remover do carrinho</a>
                        </div>
                    </div>
                </div>
            }
            </div>
            <div class="mt-3 fw-bold">@($"Total mercado {produtosPorMercado.Mercado.Nome}: R$ {produtosPorMercado.TotalPorMercado():N2)}")</div>
        </div>
    }
}
}