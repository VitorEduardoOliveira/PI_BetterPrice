<div class="modal-header">
    <h5 class="modal-title">Cadastre-se</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body login body">
    <div class="container justify-content-center align-items-center">
        <form method="post" asp-page="/Login/ProcessarCadastro">
            <!-- Nome -->
            <div class="mb-3">
                <label for="nome" class="login form-label">Nome Completo</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome completo" required>
            </div>
            
            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="login form-label">Email</label>
                <input type="text" class="login form-control" id="email" name="email" placeholder="Digite seu email" required>
            </div>

            <!-- CPF -->
            <div class="mb-3">
                <label for="cpf" class="login form-label">CPF</label>
                <input type="text" class="form-control" id="cpf" name="cpf" placeholder="Digite seu CPF" required>
            </div>

            <!-- Data de Nascimento -->
            <div class="mb-3">
                <label for="dataNascimento" class="login form-label">Data de Nascimento</label>
                <input type="date" class="form-control" id="dataNascimento" name="dataNascimento" required>
            </div>

            <!-- Senha -->
            <div class="mb-3">
                <label for="senha" class="login form-label">Senha</label>
                <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha" required>
            </div>
            
            <!-- Exibir mensagens de erro -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Botão de Envio -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn login btn-primary">Cadastrar</button>
            </div>
            
            <!-- Google button -->
            <div class="d-grid gap-2 mt-3">
                <a asp-page="Login/GoogleLogin" class="btn btn-light border d-flex align-items-center justify-content-center">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/768px-Google_%22G%22_logo.svg.png"
                         alt="Google logo" width="20" height="20" class="me-2">
                    Registrar com Google
                </a>
            </div>

            <!-- Link para login -->
            <p class="text-center mt-3">
                Já tem uma conta? 
                <a href="#" id="logarBtn" data-bs-toggle="modal" data-bs-target="#loginModal">Faça login</a>
            </p>
        </form>
    </div>
</div>

