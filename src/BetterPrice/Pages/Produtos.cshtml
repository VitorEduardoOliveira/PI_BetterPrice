@page
@using BetterPrice.Pages.Components
@using BetterPrice.Services
@using BetterPrice.ViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BetterPrice.Pages.ProdutosModel
@{
    <div class="container mt-4">
        <div class="row">
            <!-- Filtros Laterais -->
            <aside class="col-md-3">
                <h5>Filtros</h5>
                <form>
                    <!-- Categorias Section -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Categorias</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Alimentos" id="alimentos">
                            <label class="form-check-label" for="alimentos">Alimentos</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Bebidas" id="bebidas">
                            <label class="form-check-label" for="bebidas">Bebidas</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Higiene" id="higiene">
                            <label class="form-check-label" for="higiene">Higiene</label>
                        </div>
                    </div>

                    <!-- Preço Section -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Preço</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="low" id="baixo">
                            <label class="form-check-label" for="baixo">Até R$ 50</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="medium" id="medio">
                            <label class="form-check-label" for="medio">R$ 51 - R$ 200</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="high" id="alto">
                            <label class="form-check-label" for="alto">Acima de R$ 200</label>
                        </div>
                    </div>

                    <!-- Add more sections as needed -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Departamentos</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Eletrônicos" id="eletronicos">
                            <label class="form-check-label" for="eletronicos">Eletrônicos</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Vestuário" id="vestuario">
                            <label class="form-check-label" for="vestuario">Vestuário</label>
                        </div>
                    </div>
                </form>
            </aside>


            
            <section class="col-md-9">
                <!-- Caixa de pesquisa com bordas arredondadas -->
                <form role="search" class="d-flex justify-content-center align-items-center">
                    <input asp-for="Filtro.Nome" class="form-control me-2 rounded-pill" type="search" placeholder="Pesquisar produtos..." aria-label="Pesquisar">
                    <button class="btn btn-outline-primary rounded-pill" asp-page-handler="Pesquisa" type="submit">Buscar</button>
                </form>
                <h5>Resultados</h5>
                @Component.InvokeAsync("ProdutoList", new
                {
                    tipoListaProduto = TipoListaProduto.Cards,
                    filtroProduto = Model.Filtro
                })
            </section>
            
        </div>
    </div>
}
